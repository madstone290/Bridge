@typeparam T
@inherits MudCheckBox<T>

@{
    base.BuildRenderTree(__builder);
}

@code {
    protected override Task OnInitializedAsync()
    {
        if (string.IsNullOrWhiteSpace(Label))
        {
            Class += " adv-no-label";
        }

        return base.OnInitializedAsync();
    }
}
