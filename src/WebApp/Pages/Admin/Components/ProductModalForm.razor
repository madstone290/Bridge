@using Bridge.Domain.Products.Entities
<MudDialog>
    <DialogContent>
        <MudForm @ref="_form"
                 @bind-IsValid="_isFormValid"
                 Model="_product"
                 ValidationDelay="0">
            <MudGrid Spacing="1">
                <MudItem xs="12">
                    <AdvSelect @bind-Value="_product.Type"
                               T="ProductType"
                               Validation="@(_validator.PropertyValidation(x=> x.Type))"
                               Label="제품타입"
                               AutoFocus="true">
                        @{
                            foreach (var placeType in Enum.GetValues<ProductType>())
                            {
                                <MudSelectItem Value="@placeType"></MudSelectItem>
                            }
                        }
                    </AdvSelect>
                </MudItem>
                <MudItem xs="12">
                    <AdvTextField @bind-Value="_product.Name"
                                  Validation="@(_validator.PropertyValidation(x=> x.Name))"
                                  Label="제품명" />
                </MudItem>
                <MudItem xs="12">
                    <AdvTextField @bind-Value="_product.Price"
                                  Label="가격"
                                  Validation="@(_validator.PropertyValidation(x=> x.Price))" />
                </MudItem>
                <MudItem xs="12">
                    <AdvSelect @bind-SelectedValues="_product.Categories"
                               T="ProductCategory"
                               MultiSelection="true"
                               Label="카테고리"
                               Validation="@(_validator.PropertyValidation(x=> x.Categories))">
                        @foreach (var category in Enum.GetValues<ProductCategory>())
                        {
                            <MudSelectItem Value="category"></MudSelectItem>
                        }
                    </AdvSelect>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Error"
                   OnClick="Cancel_Click">
            취소
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="Save_Click">
            저장
        </MudButton>
    </DialogActions>
</MudDialog>